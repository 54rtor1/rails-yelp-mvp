
<div class="container">
<h1>All restaurants</h1>

  <div class="row row-cols-1 row-cols-md-4 g-4">
       <% @restaurants.each do |restaurant| %>
   <div class="col">
     <div class="card">
        <%= link_to restaurant_path(restaurant.id) do %>
         <img src="<%= restaurant.image_url %>" class="card-img-top" width="160" height="180">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <% end %>
         <p class="card-text"><%= restaurant.category %></p>
       </div>
     </div>
    </div>
         <% end %>
  </div>
</div>
